# Application Settings
DEBUG=false
API_KEY=your-secure-api-key-here

# Database
DATABASE_URL=sqlite:///./trading_bot.db
# For PostgreSQL: postgresql://user:password@localhost/trading_bot

# Alpaca Trading (Get from https://alpaca.markets)
ALPACA_API_KEY=your-alpaca-api-key
ALPACA_API_SECRET=your-alpaca-api-secret
ALPACA_PAPER=true

# LLM Configuration
LLM_PROVIDER=openai
DEEP_THINK_LLM=gpt-4o-mini
QUICK_THINK_LLM=gpt-4o-mini
OPENAI_API_KEY=your-openai-api-key
# ANTHROPIC_API_KEY=your-anthropic-api-key
# GOOGLE_API_KEY=your-google-api-key

# Data Sources
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-api-key
# TWITTER_BEARER_TOKEN=your-twitter-bearer-token
# REDDIT_CLIENT_ID=your-reddit-client-id
# REDDIT_CLIENT_SECRET=your-reddit-client-secret

# Trading Configuration
MAX_POSITIONS=5
MAX_POSITION_VALUE=5000.0
MIN_SENTIMENT_SCORE=0.3
MIN_ANALYST_CONFIDENCE=0.6
TAKE_PROFIT_PCT=10.0
STOP_LOSS_PCT=5.0

# Autonomous Trading
AUTONOMOUS_ENABLED=false
DATA_POLL_INTERVAL_SECONDS=30
ANALYST_INTERVAL_SECONDS=120

# Options & Crypto
OPTIONS_ENABLED=false
CRYPTO_ENABLED=false

# Security
KILL_SWITCH_SECRET=your-separate-kill-switch-secret
